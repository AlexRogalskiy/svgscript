  "dependencies": {
    "browserify": "^17.0.0",
    "browserify-middleware": "^8.1.1",
    "chalk": "^5.0.0",
    "chokidar": "^3.5.2",
    "clean-css": "^5.2.2",
    "clone": "^2.1.2",
